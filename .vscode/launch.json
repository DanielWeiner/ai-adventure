    "version": "0.2.0",
    "configurations": [

        {
            "address": "0.0.0.0",
            "localRoot": "${workspaceFolder}/app",
            "name": "Attach to Remote",
            "port": 39229,
            "remoteRoot": "/home/node/app/app",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}